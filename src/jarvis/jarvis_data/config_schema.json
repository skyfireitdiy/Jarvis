{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Jarvis环境变量配置模式",
  "description": "Jarvis系统配置模式",
  "type": "object",
  "properties": {
    "JARVIS_MCP": {
      "type": "array",
      "description": "MCP工具配置列表",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "required": [
              "type",
              "base_url"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "sse",
                  "streamable"
                ],
                "description": "MCP客户端类型"
              },
              "base_url": {
                "type": "string",
                "format": "uri",
                "description": "MCP服务器基础URL"
              },
              "auth_token": {
                "type": "string",
                "description": "认证令牌(可选)"
              },
              "headers": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "额外的HTTP头(可选)"
              },
              "name": {
                "type": "string",
                "description": "工具名称(可选)"
              },
              "enable": {
                "type": "boolean",
                "default": true,
                "description": "是否启用该工具(可选)"
              }
            }
          },
          {
            "type": "object",
            "required": [
              "type",
              "command"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "stdio"
                ],
                "description": "MCP客户端类型"
              },
              "command": {
                "type": "string",
                "description": "要执行的命令"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "命令参数列表(可选)"
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "环境变量(可选)"
              },
              "name": {
                "type": "string",
                "description": "工具名称(可选)"
              },
              "enable": {
                "type": "boolean",
                "default": true,
                "description": "是否启用该工具(可选)"
              }
            }
          }
        ]
      }
    },
    "ENV": {
      "type": "object",
      "description": "需要设置的额外环境变量",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "JARVIS_GIT_COMMIT_PROMPT": {
      "type": "string",
      "description": "Git提交信息生成提示模板",
      "default": ""
    },
    "JARVIS_MAX_TOKEN_COUNT": {
      "type": "number",
      "description": "模型能处理的最大token数量",
      "default": 960000
    },
    "JARVIS_MAX_INPUT_TOKEN_COUNT": {
      "type": "number",
      "description": "模型能处理的最大输入token数量",
      "default": 32000
    },
    "JARVIS_PLATFORM": {
      "type": "string",
      "description": "常规操作平台名称",
      "default": "yuanbao"
    },
    "JARVIS_MODEL": {
      "type": "string",
      "description": "常规操作模型名称",
      "default": "deep_seek_v3"
    },
    "JARVIS_THINKING_PLATFORM": {
      "type": "string",
      "description": "思考操作平台名称",
      "default": "yuanbao"
    },
    "JARVIS_THINKING_MODEL": {
      "type": "string",
      "description": "思考操作模型名称",
      "default": "deep_seek"
    },
    "JARVIS_EXECUTE_TOOL_CONFIRM": {
      "type": "boolean",
      "description": "执行工具前是否需要确认",
      "default": false
    },
    "JARVIS_CONFIRM_BEFORE_APPLY_PATCH": {
      "type": "boolean",
      "description": "应用补丁前是否需要确认",
      "default": false
    },
    "JARVIS_DATA_PATH": {
      "type": "string",
      "description": "Jarvis数据存储目录路径",
      "default": "~/.jarvis"
    },
    "JARVIS_MAX_BIG_CONTENT_SIZE": {
      "type": "number",
      "description": "最大大内容尺寸",
      "default": 160000
    },
    "JARVIS_PRETTY_OUTPUT": {
      "type": "boolean",
      "description": "是否启用美化输出",
      "default": false
    },
    "JARVIS_USE_METHODOLOGY": {
      "type": "boolean",
      "description": "是否启用方法论",
      "default": true
    },
    "JARVIS_USE_ANALYSIS": {
      "type": "boolean",
      "description": "是否启用任务分析",
      "default": true
    },
    "JARVIS_PRINT_PROMPT": {
      "type": "boolean",
      "description": "是否打印提示",
      "default": false
    },
    "JARVIS_REPLACE_MAP": {
      "type": "object",
      "description": "自定义替换映射表配置",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "append": {
            "type": "boolean",
            "description": "Whether to append to existing template"
          },
          "template": {
            "type": "string",
            "description": "Replacement template content"
          },
          "description": {
            "type": "string",
            "description": "Description of the replacement"
          }
        },
        "required": [
          "template"
        ]
      }
    }
  },
  "additionalProperties": false
}