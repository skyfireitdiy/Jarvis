{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Jarvis环境变量配置模式",
  "description": "Jarvis系统配置模式",
  "type": "object",
  "properties": {
    "JARVIS_MCP": {
      "type": "array",
      "description": "MCP工具配置列表",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "required": [
              "type",
              "base_url"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "sse",
                  "streamable"
                ],
                "description": "MCP客户端类型"
              },
              "base_url": {
                "type": "string",
                "format": "uri",
                "description": "MCP服务器基础URL"
              },
              "auth_token": {
                "type": "string",
                "description": "认证令牌(可选)"
              },
              "headers": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "额外的HTTP头(可选)"
              },
              "name": {
                "type": "string",
                "description": "工具名称(可选)"
              },
              "enable": {
                "type": "boolean",
                "default": true,
                "description": "是否启用该工具(可选)"
              }
            }
          },
          {
            "type": "object",
            "required": [
              "type",
              "command"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "stdio"
                ],
                "description": "MCP客户端类型"
              },
              "command": {
                "type": "string",
                "description": "要执行的命令"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "命令参数列表(可选)"
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "环境变量(可选)"
              },
              "name": {
                "type": "string",
                "description": "工具名称(可选)"
              },
              "enable": {
                "type": "boolean",
                "default": true,
                "description": "是否启用该工具(可选)"
              }
            }
          }
        ]
      }
    },
    "ENV": {
      "type": "object",
      "description": "需要设置的额外环境变量",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    },
    "JARVIS_GIT_COMMIT_PROMPT": {
      "type": "string",
      "description": "Git提交信息生成提示模板",
      "default": ""
    },
    "JARVIS_MAX_INPUT_TOKEN_COUNT": {
      "type": "number",
      "description": "模型能处理的最大输入token数量。其他token限制基于此值计算：最大token数量=此值×100，最大大内容尺寸=此值×5",
      "default": 32000
    },
    "JARVIS_PLATFORM": {
      "type": "string",
      "description": "常规操作平台名称",
      "default": "yuanbao"
    },
    "JARVIS_MODEL": {
      "type": "string",
      "description": "常规操作模型名称",
      "default": "deep_seek_v3"
    },
    "JARVIS_WEB_SEARCH_PLATFORM": {
      "type": "string",
      "description": "Web搜索使用的平台名称",
      "default": ""
    },
    "JARVIS_WEB_SEARCH_MODEL": {
      "type": "string",
      "description": "Web搜索使用的模型名称",
      "default": ""
    },
    "JARVIS_LLM_GROUP": {
      "type": "string",
      "description": "选择一个预定义的模型组",
      "default": ""
    },
    "JARVIS_LLM_GROUPS": {
      "type": "array",
      "description": "预定义的模型配置组",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "JARVIS_PLATFORM": {
              "type": "string",
              "default": "yuanbao"
            },
            "JARVIS_MODEL": {
              "type": "string",
              "default": "deep_seek_v3"
            },
            "JARVIS_MAX_INPUT_TOKEN_COUNT": {
              "type": "number",
              "default": 32000
            },
            "ENV": {
              "type": "object",
              "description": "该模型组特定的环境变量，会覆盖全局 ENV 配置",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "JARVIS_PLATFORM",
            "JARVIS_MODEL"
          ]
        }
      }
    },
    "JARVIS_EXECUTE_TOOL_CONFIRM": {
      "type": "boolean",
      "description": "执行工具前是否需要确认",
      "default": false
    },
    "JARVIS_CONFIRM_BEFORE_APPLY_PATCH": {
      "type": "boolean",
      "description": "应用补丁前是否需要确认",
      "default": false
    },
    "JARVIS_DATA_PATH": {
      "type": "string",
      "description": "Jarvis数据存储目录路径",
      "default": "~/.jarvis"
    },
    "JARVIS_PRETTY_OUTPUT": {
      "type": "boolean",
      "description": "是否启用美化输出",
      "default": false
    },
    "JARVIS_USE_METHODOLOGY": {
      "type": "boolean",
      "description": "是否启用方法论",
      "default": true
    },
    "JARVIS_USE_ANALYSIS": {
      "type": "boolean",
      "description": "是否启用任务分析",
      "default": true
    },
    "JARVIS_TOOL_LOAD_DIRS": {
      "type": "array",
      "description": "自定义工具加载目录",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "JARVIS_METHODOLOGY_DIRS": {
      "type": "array",
      "description": "方法论加载目录",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "JARVIS_AGENT_DEFINITION_DIRS": {
      "type": "array",
      "description": "agent 定义加载目录",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "JARVIS_MULTI_AGENT_DIRS": {
      "type": "array",
      "description": "multi_agent 加载目录",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "JARVIS_ROLES_DIRS": {
      "type": "array",
      "description": "roles 加载目录",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "JARVIS_CENTRAL_METHODOLOGY_REPO": {
      "type": "string",
      "description": "中心方法论Git仓库地址，该仓库会自动添加到方法论加载路径中",
      "default": ""
    },
    "JARVIS_CENTRAL_TOOL_REPO": {
      "type": "string",
      "description": "中心工具库Git仓库地址，该仓库会自动克隆到数据目录并加载其中的工具",
      "default": ""
    },
    "JARVIS_PRINT_PROMPT": {
      "type": "boolean",
      "description": "是否打印提示",
      "default": false
    },
    "JARVIS_ENABLE_STATIC_ANALYSIS": {
      "type": "boolean",
      "description": "是否启用静态代码分析",
      "default": true
    },
    "JARVIS_FORCE_SAVE_MEMORY": {
      "type": "boolean",
      "description": "是否强制保存记忆",
      "default": true
    },
    "JARVIS_ENABLE_GIT_JCA_SWITCH": {
      "type": "boolean",
      "description": "在初始化环境前检测Git仓库并提示可切换到代码开发模式（jca）",
      "default": false
    },
    "JARVIS_ENABLE_STARTUP_CONFIG_SELECTOR": {
      "type": "boolean",
      "description": "在进入默认通用代理前，列出可用配置（agent/multi_agent/roles）供选择",
      "default": false
    },
    "JARVIS_IMMEDIATE_ABORT": {
      "type": "boolean",
      "description": "是否启用立即中断：在对话迭代中检测到中断信号时立即返回",
      "default": false
    },
    "JARVIS_GIT_CHECK_MODE": {
      "type": "string",
      "enum": ["strict", "warn"],
      "description": "Git 配置校验模式：strict 表示严格模式（默认），缺失配置时直接退出；warn 表示警告模式，仅提示并继续运行",
      "default": "strict"
    },
    "JARVIS_TOOL_GROUP": {
      "type": "string",
      "description": "选择一个预定义的工具配置组",
      "default": ""
    },
    "JARVIS_TOOL_GROUPS": {
      "type": "array",
      "description": "预定义的工具配置组",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "use": {
              "type": "array",
              "description": "要使用的工具名称列表",
              "items": {
                "type": "string"
              }
            },
            "dont_use": {
              "type": "array",
              "description": "不使用的工具名称列表",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "JARVIS_RAG_GROUP": {
      "type": "string",
      "description": "选择一个预定义的RAG配置组",
      "default": ""
    },
    "JARVIS_RAG_GROUPS": {
      "type": "array",
      "description": "预定义的RAG配置组",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "embedding_model": {
              "type": "string",
              "default": "BAAI/bge-m3"
            },
            "rerank_model": {
              "type": "string",
              "default": "BAAI/bge-reranker-v2-m3"
            },
            "use_bm25": {
              "type": "boolean",
              "default": true
            },
            "use_rerank": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    },
    "JARVIS_RAG": {
      "type": "object",
      "description": "RAG框架的顶层配置。注意：此处的设置将覆盖任何由JARVIS_RAG_GROUP选择的组配置。",
      "properties": {
        "embedding_model": {
          "type": "string",
          "default": "BAAI/bge-m3",
          "description": "用于RAG的嵌入模型的名称, 默认为 'BAAI/bge-m3'"
        },
        "rerank_model": {
          "type": "string",
          "default": "BAAI/bge-reranker-v2-m3",
          "description": "用于RAG的rerank模型的名称, 默认为 'BAAI/bge-reranker-v2-m3'"
        },
        "use_bm25": {
          "type": "boolean",
          "default": true,
          "description": "是否在RAG中为检索使用BM25, 默认为 true"
        },
        "use_rerank": {
          "type": "boolean",
          "default": true,
          "description": "是否在RAG中为检索使用rerank, 默认为 true"
        }
      },
      "default": {
        "embedding_model": "BAAI/bge-m3",
        "rerank_model": "BAAI/bge-reranker-v2-m3",
        "use_bm25": true,
        "use_rerank": true
      }
    },
    "JARVIS_REPLACE_MAP": {
      "type": "object",
      "description": "自定义替换映射表配置",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "append": {
            "type": "boolean",
            "description": "Whether to append to existing template"
          },
          "template": {
            "type": "string",
            "description": "Replacement template content"
          },
          "description": {
            "type": "string",
            "description": "Description of the replacement"
          }
        },
        "required": [
          "template"
        ]
      }
    },
    "OPENAI_API_KEY": {
      "type": "string",
      "description": "OpenAI API Key"
    },
    "OPENAI_API_BASE": {
      "type": "string",
      "description": "OpenAI API Base URL"
    },
    "KIMI_API_KEY": {
      "type": "string",
      "description": "Kimi API Key"
    },
    "TONGYI_COOKIES": {
      "type": "string",
      "description": "Tongyi Cookies"
    },
    "YUANBAO_COOKIES": {
      "type": "string",
      "description": "Yuanbao Cookies"
    },
    "AI8_API_KEY": {
      "type": "string",
      "description": "AI8 API Key"
    },
    "SHELL": {
      "type": "string",
      "description": "系统Shell路径，用于获取当前使用的shell类型",
      "default": "/bin/bash"
    }
  },
  "additionalProperties": true
}
